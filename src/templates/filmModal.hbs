<div class="film-card__poster">
    <img class="film-card__image" src="{{poster_path}}" alt="{{original_title}}" />
</div>
<div class="film-card__description">
    <h2 class="film-card__title">{{original_title}}</h2>
    <ul class="film-card__info">
        <li class="info__item">
            <p class="info__title">Vote / Votes</p>
            <p class="info__description">
                <span class="info__description info__description--vote">{{vote_average}}</span>
                / {{vote_count}}
            </p>
        </li>
        <li class="info__item">
            <p class="info__title">Popularity</p>
            <p class="info__description">{{popularity}}</p>
        </li>
        <li class="info__item">
            <p class="info__title">Original Title</p>
            <p class="info__description info__description--title">
                {{original_title}}
            </p>
        </li>
        <li class="info__item">
            <p class="info__title">Genre</p>
            <p class="info__description">{{genre_string}}</p>
        </li>
    </ul>
    <h3 class="info__about">About</h3>
    <p class="info__text">
        {{overview}}
    </p>
    <div class="modalBtn">
        <button type="button" class="modalBtn__item modalBtn__item--watchedBtn">
            add to Watched
        </button>
        <button type="button" class="modalBtn__item modalBtn__item--queueBtn">
            add to queue
        </button>
    </div>