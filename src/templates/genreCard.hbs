{{#each this}}
  <li class='film__item'>
    <article class='film__card' id={{id}}>
      <div class='film__poster'>
        <img
          src='https://www.themoviedb.org/t/p/w500{{poster_path}}'
          alt='{{original_title}}'
          width='100%'
          data-sources=''
        />
      </div>
      <div class='film__description'>
        <h3 class='film__title'>{{original_title}}</h3>
        {{!-- <p class='film__info'>{{genre_ids}}</p> --}}
        <p class='film__info'>{{genre_string}}
          |
          {{release_date}}<span class='film__vote'>{{vote_average}}</span></p>
      </div>
    </article>
  </li>
{{/each}}